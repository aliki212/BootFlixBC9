
@{
    ViewBag.Title = "New Contract";
}
<h2>New Contract</h2>
<form>
    <div class="form-group">
        <label>Actor</label>
        <input id="actor" name="actor" type="text" value="" class="form-control" />
    </div>    <div class="form-group">
        <label>Serie</label>
        <input id="serie" name="serie" type="text" value="" class="form-control" />
    </div>    <button class="btn btn-primary">Submit Contract</button>
</form>
@section Scripts
{
    <script>
        $(document).ready(function () {
            var actors = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/actors?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });            $('#actor').typeahead({
                minLength: 3,
                highlight: true
            },
            {
                name: 'actors',
                display: 'name',
                source: actors
            });
        });
    </script>
}

