
@{
    ViewBag.Title = "New Contract";
}
<h2>New Contract</h2>
<form id="newContract">
    <div class="form-group" >
        <label>Actor</label>
        <input id="actor" name="actor" required data-rule-validActor="true" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Serie</label>
        <input id="serie" name="serie" data-rule-validSerie="true" type="text" value="" class="form-control" />
    </div>    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="series" class="list-group">            </ul>
        </div>
    </div>
    <button class="btn btn-primary">Submit Contract</button>
</form>
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            let viewModel = {
                serieIds: []
            };
            var actors = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/actors?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });
            $('#actor').typeahead({
                minLength: 3,
                highlight: true
            },
                {
                    name: 'actors',
                    display: 'name',
                    source: actors
                }).on("typeahead:select", function (e, actor) {
                    viewModel.actorId = actor.id;
                    console.log(actor.id);
                }); var series = new Bloodhound({
                    datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                    queryTokenizer: Bloodhound.tokenizers.whitespace,
                    remote: {
                        url: '/api/series?query=%QUERY',
                        wildcard: '%QUERY'
                    }
                });
            $('#serie').typeahead({
                minLength: 3,
                highlight: true
            },
                {
                    name: 'series',
                    display: 'name',
                    source: series
                }).on("typeahead:select", function (e, serie) {
                    $("#series").append("<li class='list-group-item'>" + serie.name + "</li>");
                    $("#serie").typeahead("val", "");
                    viewModel.serieIds.push(serie.id);
                });

            // custom validation
            $.validator.addMethod("validActor", function () {
                return viewModel.actorId && viewModel.actorId !== 0; // two equals mean to test the value and the type
            }, "Please add a registered actor.");

            // AtLeastOneSERIE
             $.validator.addMethod("validSerie", function () {
                return  viewModel.serieIds && viewModel.serieIds.length > 0; 
            }, "Please add at least one serie.");

            // validate form
             var validator =  $("#newContract").validate({
                submitHandler: function () {
                    // e.preventDefault(); //here is not the form (e) but the event
                $.ajax({
                    url: "/api/contracts",
                    method: "POST",
                    data: viewModel
                })
                    .done(function () {
                        toastr.success("A new contract has been deployed");
                        //on success empty out the typeahead values and the viewModel.serieIds to enter the next contract to be submited
                        $("#actor").typeahead("val", "");
                        $("#serie").typeahead("val", "");
                        $("#series").typeahead("val", "");

                        viewModel = { serieIds: [] }; 
                        validator.resetForm(); //AND the actual form
                        console.log("Sucess");
                    })
                    .fail(function () {
                        toastr.fail("Something went wrong");
                        console.log("Failed");
                    });
                    return false;
                }
            });

            ////submit form
            //$("#newContract").submit(function (e) {
            //    e.preventDefault(); //instead of working like a regular form be an 
            //    $.ajax({
            //        url: "/api/contracts",
            //        method: "POST",
            //        data: viewModel
