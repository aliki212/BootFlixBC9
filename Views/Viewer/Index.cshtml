<script>
        $(document).ready(function () {
            var table = $("#viewers").DataTable({
                ajax: {
                    url: "/api/viewers/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"//,
                        //render: function (data, type, viewer) {
                        //    return "<a href='/viewer/edit/" + viewer.id + "'>" + viewer.name + "</a>";
                        //}
                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "isSubscribedToNews"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-link js-delete' data-viewer-id=" + data + ">Delete</button>"
                        }
                    }
                ]
            });
            $("#viewers").on("click", ".js-delete", function () {
                let button = $(this); bootbox.confirm("Delete?Are You SURE SURE?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/viewers/" + button.attr("data-viewer-id"),
                            method: "DELETE",
                            success: function () {
                                //console.log("YES YES YES");
                                //button.parents("tr").remove();
                                table.row(button.parents("tr")).remove().draw();
                            }
                        })
                    }
                });
            });
        });
    </script>
