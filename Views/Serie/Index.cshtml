@model IEnumerable<BootFlixBC9.Models.Serie>
@{
    ViewBag.Title = "Index";
}

<h2>Series</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Serie</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var serie in Model)
        {
            <tr>
                @*<td>@serie.Name</td>*@
                <td>@Html.ActionLink(serie.Name, "Details", "Serie", new { id = serie.Id }, null</td>
                <td>@serie.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>

