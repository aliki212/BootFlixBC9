@model BootFlixBC9.ViewModels.SerieFormViewModel
@{
    ViewBag.Title = "SerieForm";
}
<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Serie"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Please fix the following errors:")
<div class="form-group">
    @Html.LabelFor(s => s.Serie.Name)
    @Html.TextBoxFor(s => s.Serie.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Serie.Name, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(s => s.Serie.DateReleased)
    @Html.TextBoxFor(s => s.Serie.DateReleased, "{0:d MMM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Serie.DateReleased, "", new { @class = "text-danger" })
</div>
    <div class="form-group">
        @Html.LabelFor(s => s.Serie.GenreId)
        @Html.DropDownListFor(s => s.Serie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "=Select=", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Serie.Seasons)
        @Html.TextBoxFor(s => s.Serie.Seasons, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Serie.DateReleased, "", new { @class = "text-danger" })
    </div>
    @Html.HiddenFor(s => s.Serie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
}